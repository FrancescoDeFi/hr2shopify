{% assign locale_prefix = request.locale.iso_code | downcase | slice: 0, 2 %}
{% assign use_locale_copy = false %}
{% unless locale_prefix == 'de' %}
  {% assign use_locale_copy = true %}
{% endunless %}

{% assign ingredients_heading = section.settings.heading %}
{% if use_locale_copy or ingredients_heading == blank %}
  {% assign ingredients_heading = 'sections.ingredients.heading' | t %}
{% endif %}

{% assign ingredients_more_text = section.settings.more_text %}
{% if use_locale_copy or ingredients_more_text == blank %}
  {% assign ingredients_more_text = 'sections.ingredients.more' | t %}
{% endif %}

{% assign first_description = '' %}
{% assign first_curve_top = '' %}
{% assign first_curve_bottom = '' %}
{% assign default_curve_top = 'sections.ingredients.default_curve_top' | t %}
{% assign default_curve_bottom = 'sections.ingredients.default_curve_bottom' | t %}

<section class="ingredients-explorer" aria-labelledby="ingredients-title">
  <div class="ingredients-inner">
    <h2 class="ingredients-title" id="ingredients-title">{{ ingredients_heading }}</h2>

    <div class="ingredients-grid">
      <div class="ingredients-panel" aria-label="{{ 'sections.ingredients.aria.details' | t }}">
        <div class="ingredients-chips" role="tablist" aria-label="{{ 'sections.ingredients.aria.tabs' | t }}">
          {% for block in section.blocks %}
            {% if block.type == 'ingredient' %}
              {% assign is_first = false %}
              {% if forloop.first %}{% assign is_first = true %}{% endif %}
              {% assign ingredient_name = block.settings.name %}
              {% assign ingredient_description = block.settings.description %}
              {% assign ingredient_curve_top = block.settings.curve_top %}
              {% assign ingredient_curve_bottom = block.settings.curve_bottom %}
              {% assign ingredient_key = block.settings.id %}
              {% assign ingredient_name_key = '' %}
              {% assign ingredient_description_key = '' %}
              {% assign ingredient_curve_top_key = '' %}
              {% assign ingredient_curve_bottom_key = '' %}
              {% case ingredient_key %}
                {% when 'anagain' %}
                  {% assign ingredient_name_key = 'sections.ingredients.items.anagain.name' %}
                  {% assign ingredient_description_key = 'sections.ingredients.items.anagain.description' %}
                  {% assign ingredient_curve_top_key = 'sections.ingredients.items.anagain.curve_top' %}
                  {% assign ingredient_curve_bottom_key = 'sections.ingredients.items.anagain.curve_bottom' %}
                  {% assign ingredient_image = 'Anagai.jpeg' | asset_url %}
                {% when 'sawpalmetto' %}
                  {% assign ingredient_name_key = 'sections.ingredients.items.sawpalmetto.name' %}
                  {% assign ingredient_description_key = 'sections.ingredients.items.sawpalmetto.description' %}
                  {% assign ingredient_curve_top_key = 'sections.ingredients.items.sawpalmetto.curve_top' %}
                  {% assign ingredient_curve_bottom_key = 'sections.ingredients.items.sawpalmetto.curve_bottom' %}
                  {% assign ingredient_image = 'Saegepalmenextrak.jpeg' | asset_url %}
                {% when 'pomegranate' %}
                  {% assign ingredient_name_key = 'sections.ingredients.items.pomegranate.name' %}
                  {% assign ingredient_description_key = 'sections.ingredients.items.pomegranate.description' %}
                  {% assign ingredient_curve_top_key = 'sections.ingredients.items.pomegranate.curve_top' %}
                  {% assign ingredient_curve_bottom_key = 'sections.ingredients.items.pomegranate.curve_bottom' %}
                  {% assign ingredient_image = 'Granatapfe.jpeg' | asset_url %}
                {% when 'ashwagandha' %}
                  {% assign ingredient_name_key = 'sections.ingredients.items.ashwagandha.name' %}
                  {% assign ingredient_description_key = 'sections.ingredients.items.ashwagandha.description' %}
                  {% assign ingredient_curve_top_key = 'sections.ingredients.items.ashwagandha.curve_top' %}
                  {% assign ingredient_curve_bottom_key = 'sections.ingredients.items.ashwagandha.curve_bottom' %}
                  {% assign ingredient_image = 'Ashwagand.jpeg' | asset_url %}
                {% when 'lcysteine' %}
                  {% assign ingredient_name_key = 'sections.ingredients.items.lcysteine.name' %}
                  {% assign ingredient_description_key = 'sections.ingredients.items.lcysteine.description' %}
                  {% assign ingredient_curve_top_key = 'sections.ingredients.items.lcysteine.curve_top' %}
                  {% assign ingredient_curve_bottom_key = 'sections.ingredients.items.lcysteine.curve_bottom' %}
                  {% assign ingredient_image = 'L-cystein.jpeg' | asset_url %}
                {% when 'llysine' %}
                  {% assign ingredient_name_key = 'sections.ingredients.items.llysine.name' %}
                  {% assign ingredient_description_key = 'sections.ingredients.items.llysine.description' %}
                  {% assign ingredient_curve_top_key = 'sections.ingredients.items.llysine.curve_top' %}
                  {% assign ingredient_curve_bottom_key = 'sections.ingredients.items.llysine.curve_bottom' %}
                  {% assign ingredient_image = 'L-lysin.jpeg' | asset_url %}
                {% when 'zinc' %}
                  {% assign ingredient_name_key = 'sections.ingredients.items.zinc.name' %}
                  {% assign ingredient_description_key = 'sections.ingredients.items.zinc.description' %}
                  {% assign ingredient_curve_top_key = 'sections.ingredients.items.zinc.curve_top' %}
                  {% assign ingredient_curve_bottom_key = 'sections.ingredients.items.zinc.curve_bottom' %}
                  {% assign ingredient_image = 'zin.jpeg' | asset_url %}
                {% when 'biotin' %}
                  {% assign ingredient_name_key = 'sections.ingredients.items.biotin.name' %}
                  {% assign ingredient_description_key = 'sections.ingredients.items.biotin.description' %}
                  {% assign ingredient_curve_top_key = 'sections.ingredients.items.biotin.curve_top' %}
                  {% assign ingredient_curve_bottom_key = 'sections.ingredients.items.biotin.curve_bottom' %}
                  {% assign ingredient_image = 'bioti.jpeg' | asset_url %}
              {% endcase %}
              {% if use_locale_copy and ingredient_name_key != blank %}
                {% assign ingredient_name = ingredient_name_key | t %}
                {% assign ingredient_description = ingredient_description_key | t %}
                {% assign ingredient_curve_top = ingredient_curve_top_key | t %}
                {% assign ingredient_curve_bottom = ingredient_curve_bottom_key | t %}
              {% else %}
                {% if ingredient_name == blank and ingredient_name_key != blank %}
                  {% assign ingredient_name = ingredient_name_key | t %}
                {% endif %}
                {% if ingredient_description == blank and ingredient_description_key != blank %}
                  {% assign ingredient_description = ingredient_description_key | t %}
                {% endif %}
                {% if ingredient_curve_top == blank and ingredient_curve_top_key != blank %}
                  {% assign ingredient_curve_top = ingredient_curve_top_key | t %}
                {% endif %}
                {% if ingredient_curve_bottom == blank and ingredient_curve_bottom_key != blank %}
                  {% assign ingredient_curve_bottom = ingredient_curve_bottom_key | t %}
                {% endif %}
              {% endif %}
              {% if is_first %}
                {% assign first_description = ingredient_description %}
                {% assign first_curve_top = ingredient_curve_top %}
                {% assign first_curve_bottom = ingredient_curve_bottom %}
                {% assign first_image = ingredient_image %}
              {% endif %}
              <button class="ingredient-chip{% if is_first %} active{% endif %}"
                      type="button"
                      role="tab"
                      aria-selected="{{ is_first }}"
                      data-ingredient="{{ block.settings.id }}"
                      data-description="{{ ingredient_description }}"
                      data-curve-top="{{ ingredient_curve_top | default: '' | escape }}"
                      data-curve-bottom="{{ ingredient_curve_bottom | default: '' | escape }}"
                      data-image="{{ ingredient_image }}"
                      {{ block.shopify_attributes }}>
                <span class="chip-dot" aria-hidden="true"></span>
                {{ ingredient_name }}
              </button>
            {% endif %}
          {% endfor %}
        </div>

        <div class="ingredients-more">{{ ingredients_more_text }}</div>

        <p class="ingredient-description" id="ingredient-description">
          {{ first_description }}
        </p>
      </div>

      <div class="ingredients-visual" aria-hidden="true">
        <div class="ingredients-circle" id="ingredients-circle">
          <svg class="ingredients-curved-text" viewBox="0 0 400 400" aria-hidden="true">
            <defs>
              <path id="curve-top" d="M 30,200 A 170,170 0 0,1 370,200" fill="none"/>
              <path id="curve-bottom" d="M 370,200 A 170,170 0 0,1 30,200" fill="none"/>
            </defs>
            <text>
              <textPath id="text-top" href="#curve-top" startOffset="50%" text-anchor="middle">
                {{ first_curve_top | default: default_curve_top }}
              </textPath>
            </text>
            <text>
              <textPath id="text-bottom" href="#curve-bottom" startOffset="50%" text-anchor="middle">
                {{ first_curve_bottom | default: default_curve_bottom }}
              </textPath>
            </text>
          </svg>
          {% if section.settings.capsule_image != blank %}
            <img class="ingredients-capsule" id="ingredients-capsule-img" src="{{ section.settings.capsule_image | image_url: width: 400 }}" alt="" loading="lazy" decoding="async">
          {% elsif first_image != blank %}
            <img class="ingredients-capsule" id="ingredients-capsule-img" src="{{ first_image }}" alt="" loading="lazy" decoding="async">
          {% else %}
            <img class="ingredients-capsule" id="ingredients-capsule-img" src="{{ 'capsule.svg' | asset_url }}" alt="" loading="lazy" decoding="async">
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Inhaltsstoffe Explorer",
  "tag": "section",
  "class": "section-ingredients",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "DIE PREISGEKRÖNTE PRÄZISIONSMISCHUNG AN INHALTSSTOFFEN."
    },
    {
      "type": "text",
      "id": "more_text",
      "label": "Mehr Text",
      "default": "und 20+ mehr"
    },
    {
      "type": "image_picker",
      "id": "capsule_image",
      "label": "Kapsel Bild"
    }
  ],
  "blocks": [
    {
      "type": "ingredient",
      "name": "Inhaltsstoff",
      "settings": [
        {
          "type": "text",
          "id": "id",
          "label": "ID (für Programmierung)",
          "default": "anagain"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Anagain"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Beschreibung",
          "default": "Ein pflanzlicher Erbsensprossen-Extrakt, der die Haarwurzel in ihrer Aktivität unterstützt und so gesundes Haarwachstum begleitet.<sup>4</sup>"
        },
        {
          "type": "text",
          "id": "curve_top",
          "label": "Kreistext oben",
          "default": "UNTERSTÜTZT HAARWACHSTUM"
        },
        {
          "type": "text",
          "id": "curve_bottom",
          "label": "Kreistext unten",
          "default": "ERBSENSPROSSEN-EXTRAKT"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Inhaltsstoffe Explorer",
      "blocks": [
        { "type": "ingredient", "settings": { "id": "anagain", "name": "Anagain", "description": "Ein pflanzlicher Erbsensprossen-Extrakt, der die Haarwurzel in ihrer Aktivität unterstützt und so gesundes Haarwachstum begleitet.<sup>4</sup>", "curve_top": "UNTERSTÜTZT HAARWACHSTUM", "curve_bottom": "ERBSENSPROSSEN-EXTRAKT" } },
        { "type": "ingredient", "settings": { "id": "sawpalmetto", "name": "Sägepalmenextrakt", "description": "Ein Pflanzenextrakt, der Faktoren unterstützt, die mit der Erhaltung voller Haare in Verbindung stehen.<sup>4</sup>", "curve_top": "ERHALTUNG VOLLER HAARE", "curve_bottom": "NATÜRLICHER PFLANZENEXTRAKT" } },
        { "type": "ingredient", "settings": { "id": "pomegranate", "name": "Granatapfelextrakt", "description": "Ein polyphenolreicher Extrakt mit antioxidativen Eigenschaften – unterstützt den Schutz vor oxidativem Stress.<sup>4</sup>", "curve_top": "ANTIOXIDATIVER SCHUTZ", "curve_bottom": "POLYPHENOLREICHER EXTRAKT" } },
        { "type": "ingredient", "settings": { "id": "ashwagandha", "name": "Ashwagandha", "description": "Ein Adaptogen, das die Stressbalance unterstützt – ein wichtiger Faktor für gesunde Haarzyklen.<sup>4</sup>", "curve_top": "STRESSBALANCE FÖRDERND", "curve_bottom": "ADAPTOGENES HEILKRAUT" } },
        { "type": "ingredient", "settings": { "id": "lcysteine", "name": "L-Cysteine", "description": "Eine Aminosäure, die als Baustein von Keratin dient – unterstützt die natürliche Haarstruktur.<sup>4</sup>", "curve_top": "BAUSTEIN VON KERATIN", "curve_bottom": "ESSENTIELLE AMINOSÄURE" } },
        { "type": "ingredient", "settings": { "id": "llysine", "name": "L-Lysine", "description": "Eine essentielle Aminosäure, die am Aufbau von Strukturproteinen beteiligt ist.<sup>4</sup>", "curve_top": "AUFBAU STRUKTURPROTEINE", "curve_bottom": "ESSENTIELLE AMINOSÄURE" } },
        { "type": "ingredient", "settings": { "id": "zinc", "name": "Zink", "description": "Zink trägt zur Erhaltung normaler Haare und Nägel bei.<sup>4</sup>", "curve_top": "ERHALTUNG NORMALER HAARE", "curve_bottom": "ESSENTIELLES SPURENELEMENT" } },
        { "type": "ingredient", "settings": { "id": "biotin", "name": "Biotin", "description": "Biotin trägt zur Erhaltung normaler Haare und Haut bei.<sup>4</sup>", "curve_top": "ERHALTUNG NORMALER HAARE", "curve_bottom": "ESSENTIELLES B-VITAMIN" } }
      ]
    }
  ]
}
{% endschema %}
