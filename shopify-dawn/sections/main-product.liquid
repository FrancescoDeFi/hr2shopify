{%- assign selected_variant = product.selected_or_first_available_variant -%}
{%- assign allocations = selected_variant.selling_plan_allocations -%}

<section class="pdp-hero" aria-labelledby="product-title">
      <div class="pdp-hero-inner">
        <!-- Left: Product image carousel -->
        <div class="pdp-hero-image">
          <span class="pdp-hero-shipping">{{ 'product_page.shipping_threshold' | t }}</span>
          <div class="pdp-hero-carousel">
            <div class="pdp-hero-carousel-track">
              <div class="pdp-hero-carousel-slide active">
                <img src="{{ 'bottlenew2.png' | asset_url }}" alt="{{ 'product_page.image_alt_1' | t }}" loading="eager" decoding="async">
              </div>
              <div class="pdp-hero-carousel-slide">
                <img src="{{ 'capsule3.png' | asset_url }}" alt="{{ 'product_page.image_alt_2' | t }}" loading="lazy" decoding="async">
              </div>
              <div class="pdp-hero-carousel-slide">
                <img src="{{ 'heroimage.png' | asset_url }}" alt="{{ 'product_page.image_alt_3' | t }}" loading="lazy" decoding="async">
              </div>
              <div class="pdp-hero-carousel-slide">
                <img src="{{ 'testing.png' | asset_url }}" alt="{{ 'product_page.image_alt_4' | t }}" loading="lazy" decoding="async">
              </div>
              <div class="pdp-hero-carousel-slide">
                <img src="{{ 'bottlew.png' | asset_url }}" alt="{{ 'product_page.image_alt_5' | t }}" loading="lazy" decoding="async">
              </div>
              <div class="pdp-hero-carousel-slide">
                <img src="{{ 'capsule.png' | asset_url }}" alt="{{ 'product_page.image_alt_6' | t }}" loading="lazy" decoding="async">
              </div>
            </div>
            <div class="pdp-hero-carousel-dots">
              <button class="pdp-carousel-dot active" aria-label="{{ 'product_page.image_dot' | t: number: 1 }}" data-index="0"></button>
              <button class="pdp-carousel-dot" aria-label="{{ 'product_page.image_dot' | t: number: 2 }}" data-index="1"></button>
              <button class="pdp-carousel-dot" aria-label="{{ 'product_page.image_dot' | t: number: 3 }}" data-index="2"></button>
              <button class="pdp-carousel-dot" aria-label="{{ 'product_page.image_dot' | t: number: 4 }}" data-index="3"></button>
              <button class="pdp-carousel-dot" aria-label="{{ 'product_page.image_dot' | t: number: 5 }}" data-index="4"></button>
              <button class="pdp-carousel-dot" aria-label="{{ 'product_page.image_dot' | t: number: 6 }}" data-index="5"></button>
            </div>
          </div>
        </div>

        <!-- Right: Product info -->
        <div class="pdp-hero-info">
          <h1 class="pdp-hero-title" id="product-title">{{ product.title }}</h1>
          <p class="pdp-hero-subtitle">{{ 'product_page.subtitle' | t }}</p>

          <div class="pdp-hero-tags">
            <span class="pdp-hero-tag">{{ 'product_page.tag_1' | t }}</span>
            <span class="pdp-hero-tag">{{ 'product_page.tag_2' | t }}</span>
            <span class="pdp-hero-tag">{{ 'product_page.tag_3' | t }}</span>
            <span class="pdp-hero-tag">{{ 'product_page.tag_4' | t }}</span>
          </div>

          <p class="pdp-hero-desc">
            {{ 'product_page.description' | t }}
          </p>

          <ul class="pdp-hero-benefits">
            <li>{{ 'product_page.benefit_1' | t }}</li>
            <li>{{ 'product_page.benefit_2' | t }}</li>
            <li>{{ 'product_page.benefit_3' | t }}</li>
            <li>{{ 'product_page.benefit_4' | t }}</li>
          </ul>

          <p class="pdp-hero-capsule-note">{{ 'product_page.capsule_note' | t }}</p>

          <div class="pdp-hero-divider"></div>

          <!-- Purchase options -->
          {%- form 'product', product, class: 'pdp-hero-form', novalidate: 'novalidate' -%}
            {%- assign initial_plan_id = '' -%}
            {%- if product.selling_plan_groups.size > 0 -%}
              {%- assign initial_plan_id = product.selling_plan_groups.first.selling_plans.first.id -%}
            {%- endif -%}
            <input type="hidden" name="id" value="{{ selected_variant.id }}">
            <input type="hidden" name="selling_plan" value="{{ initial_plan_id }}">
            <input type="hidden" name="return_to" value="/checkout">

            <div class="pdp-hero-options" role="radiogroup" aria-label="{{ 'product_page.delivery_options' | t }}" data-selling-options>
              {%- if product.selling_plan_groups.size > 0 -%}
                {%- assign first_group = product.selling_plan_groups.first -%}
                {%- assign first_plan = first_group.selling_plans.first -%}
                {%- for group in product.selling_plan_groups -%}
                  {%- for plan in group.selling_plans -%}
                    {%- assign matched_allocation = blank -%}
                    {%- for allocation in allocations -%}
                      {%- if allocation.selling_plan and allocation.selling_plan.id == plan.id -%}
                        {%- assign matched_allocation = allocation -%}
                        {%- break -%}
                      {%- endif -%}
                    {%- endfor -%}
                    {%- assign adjustment = plan.price_adjustments | first -%}
                    {%- assign option_old_price = selected_variant.price -%}
                    {%- assign option_new_price = selected_variant.price -%}

                    {%- if matched_allocation and matched_allocation.price -%}
                      {%- assign option_new_price = matched_allocation.price -%}
                      {%- if matched_allocation.compare_at_price and matched_allocation.compare_at_price > matched_allocation.price -%}
                        {%- assign option_old_price = matched_allocation.compare_at_price -%}
                      {%- endif -%}
                    {%- elsif adjustment -%}
                      {%- if adjustment.value_type == 'percentage' -%}
                        {%- assign discount_amount = selected_variant.price | times: adjustment.value | divided_by: 100 -%}
                        {%- assign option_new_price = selected_variant.price | minus: discount_amount -%}
                      {%- elsif adjustment.value_type == 'fixed_amount' -%}
                        {%- assign option_new_price = selected_variant.price | minus: adjustment.value -%}
                      {%- elsif adjustment.value_type == 'price' -%}
                        {%- assign option_new_price = adjustment.value -%}
                      {%- endif -%}
                    {%- endif -%}

                    {%- if option_new_price < 0 -%}
                      {%- assign option_new_price = 0 -%}
                    {%- endif -%}

                    {%- assign save_text = '' -%}
                    {%- if adjustment and adjustment.value_type == 'percentage' -%}
                      {%- assign save_text = 'product_page.save_prefix' | t | append: ' ' | append: adjustment.value | append: '%' -%}
                    {%- elsif adjustment and adjustment.value_type == 'fixed_amount' -%}
                      {%- assign save_text = 'product_page.save_prefix' | t | append: ' ' | append: adjustment.value | money -%}
                    {%- endif -%}
                    {%- assign localized_plan_name = plan.name -%}
                    {%- if request.locale.iso_code == 'de' -%}
                      {%- assign localized_plan_name = plan.name
                        | replace: 'Deliver every month', '1-Monats-Vorrat'
                        | replace: 'Deliver every 1 month', '1-Monats-Vorrat'
                        | replace: 'Deliver every 2 months', '2-Monats-Vorrat'
                        | replace: 'Deliver every 3 months', '3-Monats-Vorrat'
                        | replace: 'Deliver every 6 months', '6-Monats-Vorrat'
                        | replace: 'DELIVER EVERY MONTH', '1-MONATS-VORRAT'
                        | replace: 'DELIVER EVERY 1 MONTH', '1-MONATS-VORRAT'
                        | replace: 'DELIVER EVERY 2 MONTHS', '2-MONATS-VORRAT'
