    <!-- Bio-Optimized Banner -->
    <section class="pdp-bio" aria-label="{{ 'product_page.bio_aria' | t }}">
      <div class="pdp-bio-inner">
        <div class="pdp-bio-copy">
          <h2>{{ 'product_page.bio_title' | t }}</h2>
        </div>
        <div class="pdp-bio-text">
          <p>{{ 'product_page.bio_text' | t }}</p>
        </div>
      </div>
    </section>

