                        | replace: 'Spare 25%', ''
                        | replace: 'SPARE 10%', ''
                        | replace: 'SPARE 15%', ''
                        | replace: 'SPARE 20%', ''
                        | replace: 'SPARE 25%', ''
                        | replace: ', 10% sparen', ''
                        | replace: ', 15% sparen', ''
                        | replace: ', 20% sparen', ''
                        | replace: ', 25% sparen', ''
                        | replace: ', 10% SPAREN', ''
                        | replace: ', 15% SPAREN', ''
                        | replace: ', 20% SPAREN', ''
                        | replace: ', 25% SPAREN', ''
                        | replace: '  ', ' '
