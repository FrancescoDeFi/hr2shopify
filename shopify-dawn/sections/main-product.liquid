                        | replace: ', ,', ','
                        | replace: ' ,', ','
                        | strip
                      -%}
                    {%- endif -%}
                    {%- assign normalized_plan_name = localized_plan_name | downcase -%}
                    {%- if normalized_plan_name contains '% sparen' or normalized_plan_name contains '% off' or normalized_plan_name contains 'spare ' or normalized_plan_name contains 'save ' -%}
                      {%- assign save_text = '' -%}
                    {%- endif -%}
                    {%- assign is_selected = false -%}
                    {%- if plan.id == first_plan.id -%}
                      {%- assign is_selected = true -%}
                    {%- endif -%}
                    <label class="pdp-hero-option{% if is_selected %} is-selected{% endif %}" data-selling-option data-selling-plan="{{ plan.id }}">
                      <input class="pdp-hero-radio" type="radio" name="purchase_option" value="{{ plan.id }}" data-selling-input{% if is_selected %} checked{% endif %}>
                      <div class="pdp-hero-option-left">
                        <span class="pdp-hero-option-name">{{ localized_plan_name }}</span>
                        {%- if save_text != '' -%}
                          <span class="pdp-hero-option-save">{{ save_text }}</span>
                        {%- endif -%}
                      </div>
                      <div class="pdp-hero-option-right">
                        {%- if option_new_price < option_old_price -%}
                          <span class="pdp-hero-option-old">{{ option_old_price | money }}</span>
                        {%- endif -%}
                        <span class="pdp-hero-option-new">{{ option_new_price | money }}</span>
                      </div>
                    </label>
                  {%- endfor -%}
                {%- endfor -%}
              {%- else -%}
                <label class="pdp-hero-option is-selected" data-selling-option data-selling-plan="">
                  <input class="pdp-hero-radio" type="radio" name="purchase_option" value="onetime" data-selling-input checked>
                  <div class="pdp-hero-option-left">
                    <span class="pdp-hero-option-name">{{ 'product_page.one_time' | t }}</span>
                  </div>
                  <div class="pdp-hero-option-right">
                    <span class="pdp-hero-option-new">{{ selected_variant.price | money }}</span>
                  </div>
                </label>
              {%- endif -%}
            </div>

            <button class="pdp-hero-cta" id="order-cta" type="submit" name="add">{{ 'products.product.add_to_cart' | t }}</button>

            <div class="pdp-hero-trust">
              <span>✓ {{ 'products.product.free_shipping' | t }}</span>
              <span>✓ {{ 'products.product.cancel_anytime' | t }}</span>
              <span>✓ {{ 'products.product.money_back' | t }}</span>
            </div>
          {%- endform -%}

          <div class="pdp-hero-partners">
            <p class="pdp-hero-partners-kicker">{{ 'sections.partners.kicker' | t }}</p>
            <div class="pdp-hero-partners-logos">
              <img class="partner-img is-png" src="{{ 'sm_howl_looks_logo_02.png' | asset_url }}" alt="Stanford" loading="lazy">
              <img class="partner-img on-dark" src="{{ '6144ac488b51c665750238.png' | asset_url }}" alt="TUM" loading="lazy" style="transform:scale(1.4)">
              <img class="partner-img is-png" src="{{ 'TU-Logo-Austria_CMYK.png' | asset_url }}" alt="TU Wien" loading="lazy" style="transform:scale(0.72)">
              <img class="partner-img" src="{{ 'LMU_Muenchen_Logo.svg' | asset_url }}" alt="LMU" loading="lazy" style="transform:scale(0.82)">
              <img class="partner-img" src="{{ 'Paracelsus-Medical-University-Logo-Vertical-EN.svg' | asset_url }}" alt="PMU" loading="lazy" style="transform:scale(0.92)">
            </div>
          </div>
        </div>
      </div>
