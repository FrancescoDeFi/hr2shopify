                      -%}
                    {%- else -%}
                      {%- assign localized_plan_name = plan.name
                        | replace: 'Deliver every month', '1-month supply'
                        | replace: 'Deliver every 1 month', '1-month supply'
                        | replace: 'Deliver every 2 months', '2-month supply'
