                        | replace: 'DELIVER EVERY 2 MONTHS', '2-MONTH SUPPLY'
                        | replace: 'DELIVER EVERY 3 MONTHS', '3-MONTH SUPPLY'
                        | replace: 'DELIVER EVERY 6 MONTHS', '6-MONTH SUPPLY'
                        | replace: ', delivered monthly', ''
                        | replace: ', delivered every month', ''
                        | replace: ', delivered every 2 months', ''
                        | replace: ', delivered every 3 months', ''
                        | replace: ', delivered every 6 months', ''
