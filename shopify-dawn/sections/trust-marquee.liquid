<div class="product-feature-marquee">
  <div class="product-feature-marquee-wrap">
    <div class="product-feature-marquee-track">
      {% for i in (1..3) %}
        <div class="product-feature-marquee-group">
          <span class="product-feature-marquee-item">{{ 'sections.marquee.item_1' | t | default: "Inhaltsstoffe wissenschaftlich geprüft" }}</span>
          <span class="product-feature-marquee-item">•</span>
          <span class="product-feature-marquee-item">{{ 'sections.marquee.item_2' | t | default: "In Deutschland entwickelt" }}</span>
          <span class="product-feature-marquee-item">•</span>
          <span class="product-feature-marquee-item">{{ 'sections.marquee.item_3' | t | default: "Von Ärzten und Wissenschaftlern empfohlen" }}</span>
          <span class="product-feature-marquee-item">•</span>
          <span class="product-feature-marquee-item">{{ 'sections.marquee.item_4' | t | default: "Vegan" }}</span>
          <span class="product-feature-marquee-item">•</span>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Trust Marquee",
  "tag": "section",
  "class": "section-trust-marquee",
  "presets": [
    {
      "name": "Trust Marquee"
    }
  ]
}
{% endschema %}
