{%- assign locale_prefix = request.locale.iso_code | downcase | slice: 0, 2 -%}
{%- assign request_path = request.path | downcase -%}
{%- assign page_handle = page.handle | downcase -%}
{%- assign is_english_path = false -%}
{%- if request_path == '/en' or request_path == '/en/' or request_path contains '/en/' -%}
  {%- assign is_english_path = true -%}
{%- endif -%}
{%- assign is_english = false -%}
{%- if locale_prefix == 'en' or is_english_path -%}
  {%- assign is_english = true -%}
{%- endif -%}

{%- if page_handle contains 'forschung' or page_handle contains 'research' -%}
  {%- if is_english -%}
    {%- render 'page-forschung-en' -%}
  {%- else -%}
    {%- render 'page-forschung' -%}
  {%- endif -%}
{%- else -%}
{%- case page_handle -%}
{%- when 'inhaltsstoffe' -%}
  {%- if is_english -%}
    {%- render 'page-inhaltsstoffe-en' -%}
  {%- else -%}
    {%- render 'page-inhaltsstoffe' -%}
  {%- endif -%}
{%- when 'hilfe' -%}
  {%- if is_english -%}
    {%- render 'page-hilfe-en' -%}
  {%- else -%}
    {%- render 'page-hilfe' -%}
  {%- endif -%}
{%- when 'datenschutz' -%}
  {%- if is_english -%}
    {%- render 'page-datenschutz-en' -%}
  {%- else -%}
    {%- render 'page-datenschutz' -%}
  {%- endif -%}
{%- when 'impressum' -%}
  {%- if is_english -%}
    {%- render 'page-impressum-en' -%}
  {%- else -%}
    {%- render 'page-impressum' -%}
  {%- endif -%}
{%- when 'agb' -%}
  {%- if is_english -%}
    {%- render 'page-agb-en' -%}
  {%- else -%}
    {%- render 'page-agb' -%}
  {%- endif -%}
{%- when 'widerruf' -%}
  {%- if is_english -%}
    {%- render 'page-widerruf-en' -%}
  {%- else -%}
    {%- render 'page-widerruf' -%}
  {%- endif -%}
{%- when 'beschwerden' -%}
  {%- if is_english -%}
    {%- render 'page-beschwerden-en' -%}
  {%- else -%}
    {%- render 'page-beschwerden' -%}
  {%- endif -%}
{%- else -%}
  <section class="legal-page" aria-labelledby="legal-title">
    <div class="legal-inner">
      <h1 class="legal-title" id="legal-title">{{ page.title }}</h1>
      <div class="legal-card">{{ page.content }}</div>
    </div>
  </section>
{%- endcase -%}
{%- endif -%}

{% schema %}
{
  "name": "Static page"
}
{% endschema %}
