{%- case page.handle -%}
{%- when 'inhaltsstoffe' -%}
  {%- render 'page-inhaltsstoffe' -%}
{%- when 'forschung' -%}
  {%- render 'page-forschung' -%}
{%- when 'hilfe' -%}
  {%- render 'page-hilfe' -%}
{%- when 'datenschutz' -%}
  {%- render 'page-datenschutz' -%}
{%- when 'impressum' -%}
  {%- render 'page-impressum' -%}
{%- when 'agb' -%}
  {%- render 'page-agb' -%}
{%- when 'widerruf' -%}
  {%- render 'page-widerruf' -%}
{%- when 'beschwerden' -%}
  {%- render 'page-beschwerden' -%}
{%- else -%}
  <section class="legal-page" aria-labelledby="legal-title">
    <div class="legal-inner">
      <h1 class="legal-title" id="legal-title">{{ page.title }}</h1>
      <div class="legal-card">{{ page.content }}</div>
    </div>
  </section>
{%- endcase -%}

{% schema %}
{
  "name": "Static page"
}
{% endschema %}
