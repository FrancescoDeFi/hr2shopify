<section class="clinical-standard" aria-labelledby="clinical-title">
  <div class="clinical-inner">
    <div class="clinical-left">
      {% assign clinical_heading = section.settings.heading | default: nil %}
      {% assign clinical_cta_text = section.settings.cta_text | default: nil %}
      {% assign clinical_footer = section.settings.footer_text | default: nil %}
      <h2 class="clinical-title" id="clinical-title">{% if clinical_heading != blank %}{{ clinical_heading }}{% else %}{{ 'sections.clinical.heading' | t }}{% endif %}</h2>
      <a class="clinical-cta" href="{{ section.settings.cta_url | default: pages['inhaltsstoffe'].url | default: '/pages/inhaltsstoffe' }}">
        <span class="cta-icon" aria-hidden="true">→</span>
        {% if clinical_cta_text != blank %}{{ clinical_cta_text }}{% else %}{{ 'sections.clinical.cta' | t }}{% endif %}
      </a>
      <p class="clinical-foot">{% if clinical_footer != blank %}{{ clinical_footer }}{% else %}{{ 'sections.clinical.footer' | t }}{% endif %}</p>
    </div>

    <div class="clinical-right" aria-label="{{ 'sections.clinical.aria_stats' | t }}">
      <div class="clinical-stats">
        {% for block in section.blocks %}
          {% if block.type == 'stat' %}
            <div class="clinical-stat" {{ block.shopify_attributes }}>
              <div class="stat-value">{{ block.settings.value }}</div>
              <div class="stat-text">{{ block.settings.text }}</div>
            </div>
          {% endif %}
        {% endfor %}

        {% if section.settings.show_sources %}
          <ol class="clinical-notes" aria-label="Quellen">
            {% for block in section.blocks %}
              {% if block.type == 'source' %}
                <li {{ block.shopify_attributes }}>
                  <a href="{{ block.settings.url }}" target="_blank" rel="noopener noreferrer">{{ block.settings.url }}</a>
                </li>
              {% endif %}
            {% endfor %}
          </ol>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Klinische Statistiken",
  "tag": "section",
  "class": "section-clinical",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Klinische Tests sind kein Extra – sie sind unser Standard."
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA Link"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Unsere Inhaltsstoffe entdecken"
    },
    {
      "type": "textarea",
      "id": "footer_text",
      "label": "Fußzeilen-Text",
      "default": "Innovationen für Haargesundheit, denen du vertrauen kannst – dank branchenführender Haarmessung."
    },
    {
      "type": "checkbox",
      "id": "show_sources",
      "label": "Quellen anzeigen",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Statistik",
      "settings": [
        {
          "type": "text",
          "id": "value",
          "label": "Wert",
          "default": "95%"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Beschreibung",
          "default": "of participants using AnaGain experienced a reduction in hair loss<sup>1</sup>"
        }
      ]
    },
    {
      "type": "source",
      "name": "Quelle",
      "settings": [
        {
          "type": "url",
          "id": "url",
          "label": "Quellen-URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Klinische Statistiken",
      "blocks": [
        { "type": "stat", "settings": { "value": "95%", "text": "of participants using AnaGain experienced a reduction in hair loss<sup>1</sup>" } },
        { "type": "stat", "settings": { "value": "60%", "text": "of subjects treated with the active study formulation (saw palmetto) were rated as improved at last visit.<sup>2</sup>" } },
        { "type": "stat", "settings": { "value": "100%", "text": "of participants with a biotin deficiency experienced an improvement in hair loss<sup>3</sup>" } },
        { "type": "source", "settings": { "url": "https://onlinelibrary.wiley.com/doi/10.1002/ptr.6528" } },
        { "type": "source", "settings": { "url": "https://pubmed.ncbi.nlm.nih.gov/12006122/" } },
        { "type": "source", "settings": { "url": "https://pmc.ncbi.nlm.nih.gov/articles/PMC5582478/" } }
      ]
    }
  ]
}
{% endschema %}
