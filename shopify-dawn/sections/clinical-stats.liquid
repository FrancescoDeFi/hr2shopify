{% assign locale_prefix = request.locale.iso_code | downcase | slice: 0, 2 %}
{% assign use_locale_copy = false %}
{% unless locale_prefix == 'de' %}
  {% assign use_locale_copy = true %}
{% endunless %}

{% assign clinical_heading = section.settings.heading %}
{% if use_locale_copy or clinical_heading == blank %}
  {% assign clinical_heading = 'sections.clinical.heading' | t %}
{% endif %}


{% assign clinical_footer = section.settings.footer_text %}
{% if use_locale_copy or clinical_footer == blank %}
  {% assign clinical_footer = 'sections.clinical.footer' | t %}
{% endif %}

<section class="clinical-standard" aria-labelledby="clinical-title">
  <div class="clinical-inner">
    <div class="clinical-left">
      <h2 class="clinical-title" id="clinical-title">{{ clinical_heading }}</h2>
      <p class="clinical-foot">{{ clinical_footer }}</p>

      <div class="clinical-stats" aria-label="{{ 'sections.clinical.aria.stats' | t }}">
        {% for block in section.blocks %}
          {% if block.type == 'stat' %}
            {% assign stat_text = block.settings.text %}
            {% if use_locale_copy %}
              {% case forloop.index %}
                {% when 1 %}
                  {% assign stat_text = 'sections.clinical.stats.stat_1' | t %}
                {% when 2 %}
                  {% assign stat_text = 'sections.clinical.stats.stat_2' | t %}
                {% when 3 %}
                  {% assign stat_text = 'sections.clinical.stats.stat_3' | t %}
              {% endcase %}
            {% elsif stat_text == blank %}
              {% case forloop.index %}
                {% when 1 %}
                  {% assign stat_text = 'sections.clinical.stats.stat_1' | t %}
                {% when 2 %}
                  {% assign stat_text = 'sections.clinical.stats.stat_2' | t %}
                {% when 3 %}
                  {% assign stat_text = 'sections.clinical.stats.stat_3' | t %}
              {% endcase %}
            {% endif %}
            <div class="clinical-stat" {{ block.shopify_attributes }}>
              <div class="stat-value">{{ block.settings.value }}</div>
              <div class="stat-text">{{ stat_text }}</div>
            </div>
          {% endif %}
        {% endfor %}

        {% if section.settings.show_sources %}
          <ol class="clinical-notes" aria-label="{{ 'sections.clinical.aria.sources' | t }}">
            {% for block in section.blocks %}
              {% if block.type == 'source' %}
                <li {{ block.shopify_attributes }}>
                  <a href="{{ block.settings.url }}" target="_blank" rel="noopener noreferrer">{{ block.settings.url }}</a>
                </li>
              {% endif %}
            {% endfor %}
          </ol>
        {% endif %}
      </div>
    </div>

    <div class="clinical-right">
      {% if section.settings.image != blank %}
        <img class="clinical-image" src="{{ section.settings.image | image_url: width: 800 }}" alt="{{ 'sections.clinical.image_alt' | t | default: 'Hr² product' }}" loading="lazy" decoding="async">
      {% else %}
        <img class="clinical-image" src="{{ 'clinictest.png' | asset_url }}" alt="{{ 'sections.clinical.image_alt' | t | default: 'Hr² product' }}" loading="lazy" decoding="async">
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Klinische Statistiken",
  "tag": "section",
  "class": "section-clinical",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Klinische Tests sind kein Extra – sie sind unser Standard."
    },
    {
      "type": "textarea",
      "id": "footer_text",
      "label": "Fußzeilen-Text",
      "default": "Innovationen für Haargesundheit, denen du vertrauen kannst – dank branchenführender Haarmessung."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Bild (rechte Seite)"
    },
    {
      "type": "checkbox",
      "id": "show_sources",
      "label": "Quellen anzeigen",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Statistik",
      "settings": [
        {
          "type": "text",
          "id": "value",
          "label": "Wert",
          "default": "95%"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Beschreibung",
          "default": "der Teilnehmenden mit Anagain erlebten eine Verringerung des Haarausfalls<sup>1</sup>"
        }
      ]
    },
    {
      "type": "source",
      "name": "Quelle",
      "settings": [
        {
          "type": "url",
          "id": "url",
          "label": "Quellen-URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Klinische Statistiken",
      "blocks": [
        { "type": "stat", "settings": { "value": "95%", "text": "der Teilnehmenden mit Anagain erlebten eine Verringerung des Haarausfalls<sup>1</sup>" } },
        { "type": "stat", "settings": { "value": "60%", "text": "der Probanten, die mit der aktiven Studienformulierung (Saw Palmetto) behandelt wurden wurden beim letzten Besuch als verbessert beurteilt.<sup>2</sup>" } },
        { "type": "stat", "settings": { "value": "100%", "text": "der Teilnehmenden mit einem Defizit an Biotin erlebten eine Verbesserung des Haarausfalls<sup>3</sup>" } },
        { "type": "source", "settings": { "url": "https://onlinelibrary.wiley.com/doi/10.1002/ptr.6528" } },
        { "type": "source", "settings": { "url": "https://pubmed.ncbi.nlm.nih.gov/12006122/" } },
        { "type": "source", "settings": { "url": "https://pmc.ncbi.nlm.nih.gov/articles/PMC5582478/" } }
      ]
    }
  ]
}
{% endschema %}
