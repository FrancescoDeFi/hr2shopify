<footer class="footer" aria-label="{{ 'theme.footer.label' | t }}">
  {%- assign current_year = 'now' | date: '%Y' -%}
  <div class="footer-top">
    <div class="footer-col footer-contact">
      <h5>{{ 'theme.footer.contact_title' | t }}</h5>

      <div class="footer-contact-list">
        <div class="footer-contact-item">
          <svg class="footer-contact-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M4 8.5C4 7.11929 5.11929 6 6.5 6H17.5C18.8807 6 20 7.11929 20 8.5V15.5C20 16.8807 18.8807 18 17.5 18H6.5C5.11929 18 4 16.8807 4 15.5V8.5Z" stroke="currentColor" stroke-width="1.5"/>
            <path d="M5 8L12 13L19 8" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <div>
            <a class="footer-link" href="mailto:info@gethr2.com">info@gethr2.com</a>
            <div class="footer-muted">{{ 'theme.footer.contact_help' | t }}</div>
          </div>
        </div>
      </div>

      <p class="footer-disclaimer">
        {{ 'theme.footer.disclaimer' | t }}
      </p>
    </div>

    <div class="footer-col">
      <h5>{{ 'theme.footer.product_title' | t }}</h5>
      <a class="footer-link" href="{{ pages['inhaltsstoffe'].url | default: '/pages/inhaltsstoffe' }}">{{ 'theme.header.ingredients' | t }}</a>
      <a class="footer-link" href="{{ pages['forschung'].url | default: '/pages/forschung' }}">{{ 'theme.header.research' | t }}</a>
    </div>

    <div class="footer-col">
      <h5>{{ 'theme.footer.legal_title' | t }}</h5>
      <a class="footer-link" href="{{ pages['datenschutz'].url | default: '/pages/datenschutz' }}">{{ 'theme.footer.privacy' | t }}</a>
      <a class="footer-link" href="{{ pages['agb'].url | default: '/pages/agb' }}">{{ 'theme.footer.terms' | t }}</a>
      <a class="footer-link" href="{{ pages['widerruf'].url | default: '/pages/widerruf' }}">{{ 'theme.footer.withdrawal' | t }}</a>
      <a class="footer-link" href="{{ pages['impressum'].url | default: '/pages/impressum' }}">{{ 'theme.footer.legal_notice' | t }}</a>
      <a class="footer-link" href="{{ pages['beschwerden'].url | default: '/pages/beschwerden' }}">{{ 'theme.footer.complaints' | t }}</a>
    </div>

    <div class="footer-col">
      <h5>{{ 'theme.footer.help_title' | t }}</h5>
      <a class="footer-link" href="{{ pages['hilfe'].url | default: '/pages/hilfe' }}#hilfecenter">{{ 'theme.footer.help_center' | t }}</a>
      <a class="footer-link" href="{{ pages['hilfe'].url | default: '/pages/hilfe' }}#kontakt">{{ 'theme.footer.contact' | t }}</a>
      <a class="footer-link" href="{{ pages['hilfe'].url | default: '/pages/hilfe' }}#versand">{{ 'theme.footer.shipping' | t }}</a>
      <a class="footer-link" href="{{ pages['hilfe'].url | default: '/pages/hilfe' }}#rueckgabe">{{ 'theme.footer.returns' | t }}</a>
    </div>
  </div>

  <div class="footer-divider" aria-hidden="true"></div>

  <div class="footer-payments" aria-label="{{ 'theme.footer.payment_methods' | t }}">
    <div class="footer-payments-icons" role="list" aria-label="{{ 'theme.footer.accepted_payment_methods' | t }}">
      <img class="footer-payments-icon" src="{{ 'payments-amex.svg' | asset_url }}" alt="American Express" loading="lazy" decoding="async" onerror="this.closest('.footer-payments')?.classList.add('is-missing'); this.remove();">
      <img class="footer-payments-icon" src="{{ 'payments-applepay.svg' | asset_url }}" alt="Apple Pay" loading="lazy" decoding="async" onerror="this.closest('.footer-payments')?.classList.add('is-missing'); this.remove();">
      <img class="footer-payments-icon" src="{{ 'payments-googlepay.svg' | asset_url }}" alt="Google Pay" loading="lazy" decoding="async" onerror="this.closest('.footer-payments')?.classList.add('is-missing'); this.remove();">
      <img class="footer-payments-icon" src="{{ 'payments-klarna.svg' | asset_url }}" alt="Klarna" loading="lazy" decoding="async" onerror="this.closest('.footer-payments')?.classList.add('is-missing'); this.remove();">
      <img class="footer-payments-icon" src="{{ 'payments-mastercard.svg' | asset_url }}" alt="Mastercard" loading="lazy" decoding="async" onerror="this.closest('.footer-payments')?.classList.add('is-missing'); this.remove();">
      <img class="footer-payments-icon" src="{{ 'payments-paypal.svg' | asset_url }}" alt="PayPal" loading="lazy" decoding="async" onerror="this.closest('.footer-payments')?.classList.add('is-missing'); this.remove();">
      <img class="footer-payments-icon" src="{{ 'payments-shoppay.svg' | asset_url }}" alt="Shop Pay" loading="lazy" decoding="async" onerror="this.closest('.footer-payments')?.classList.add('is-missing'); this.remove();">
      <img class="footer-payments-icon" src="{{ 'payments-visa.svg' | asset_url }}" alt="Visa" loading="lazy" decoding="async" onerror="this.closest('.footer-payments')?.classList.add('is-missing'); this.remove();">
    </div>
    <div class="footer-payments-fallback" aria-hidden="true">
      {{ 'theme.footer.payment_fallback' | t }}
    </div>
  </div>

  <div class="footer-bottom">
    <div class="footer-brand">
      <img class="footer-logo" src="{{ 'logosvg.svg' | asset_url }}" alt="{{ shop.name }}">
      <div class="footer-socials" aria-label="{{ 'theme.footer.social_media' | t }}">
        <a class="footer-social" href="{{ settings.social_instagram | default: '#' }}" aria-label="Instagram">
          <svg viewBox="0 0 24 24" aria-hidden="true" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M7 3.5h10a3.5 3.5 0 0 1 3.5 3.5v10A3.5 3.5 0 0 1 17 20.5H7A3.5 3.5 0 0 1 3.5 17V7A3.5 3.5 0 0 1 7 3.5Z" stroke="currentColor" stroke-width="1.5"/>
            <circle cx="12" cy="12" r="3.2" stroke="currentColor" stroke-width="1.5"/>
            <circle cx="17.2" cy="6.8" r="1" fill="currentColor"/>
          </svg>
        </a>
        <a class="footer-social" href="{{ settings.social_linkedin | default: '#' }}" aria-label="LinkedIn">
          <svg viewBox="0 0 24 24" aria-hidden="true" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M6.5 10.2V18.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
            <path d="M6.5 6.1V6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <path d="M11 10.2V18.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
            <path d="M11 13.2c0-2 1.2-3.1 2.8-3.1 1.7 0 2.6 1.1 2.6 3.1v5.3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          </svg>
        </a>
      </div>
    </div>

    <div class="footer-meta">
      <div class="footer-muted">{{ 'theme.footer.copyright' | t: year: current_year }}</div>
      <div class="footer-muted footer-small">
        {{ 'theme.footer.made_in_europe' | t }}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer"
}
{% endschema %}
