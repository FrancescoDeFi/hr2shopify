      </a>
    </div>
    <div></div>
  </div>

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê INTRO SCREEN ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <div class="quiz-screen quiz-intro active" data-screen="intro">
    {%- if doc_img != blank -%}
      <img class="doctor-photo" src="{{ doc_img | image_url: width: 400 }}" alt="{{ doc_name }}">
    {%- else -%}
