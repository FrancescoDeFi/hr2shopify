      </button>
      <a class="quiz-logo" href="{{ routes.root_url }}">
        {%- if settings.logo != blank -%}
          <img src="{{ settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}">
        {%- else -%}
          <img src="{{ 'logosvg.svg' | asset_url }}" alt="{{ shop.name }}">
