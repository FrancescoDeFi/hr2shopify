      <svg class="btn-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="M12 5l7 7-7 7"/></svg>
    </button>
  </div>

  <!-- ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê Q8 ‚Äì Diet pattern ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê -->
  <div class="quiz-screen quiz-question" data-screen="q8">
    {%- if doc_img != blank -%}
      <img class="doctor-photo-sm" src="{{ doc_img | image_url: width: 200 }}" alt="{{ doc_name }}">
    {%- endif -%}
    <h2>{% if request.locale.iso_code == 'de' %}Wie ern√§hrst Du Dich?{% else %}What is your diet pattern?{% endif %}</h2>
    <p class="q-subtitle">{% if request.locale.iso_code == 'de' %}W√§hle eine Antwort.{% else %}Choose one answer.{% endif %}</p>
