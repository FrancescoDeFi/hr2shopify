<!-- Hero -->
<section class="inh-hero" aria-labelledby="inh-title">
  <div class="inh-hero-inner">
    <div class="inh-hero-copy">
      <h1 class="inh-hero-title" id="inh-title">
        {% if request.locale.iso_code == 'en' %}Powerful combination of 30+ ingredients{% else %}Wirkungsstarke Kombination aus +30 Inhaltsstoffen{% endif %}
      </h1>
      <p class="inh-hero-sub">
        {% if request.locale.iso_code == 'en' %}Our formulation combines carefully selected ingredients. Click on an ingredient to see details.{% else %}Unsere Formulierung vereint sorgfältig ausgewählte Inhaltsstoffe. Klicke auf einen Inhaltsstoff, um Details zu sehen.{% endif %}
      </p>

      <div class="inh-stats">
        <div class="inh-stat">
          <span class="inh-stat-number">30+</span>
          <span class="inh-stat-label">{% if request.locale.iso_code == 'en' %}Ingredients{% else %}Inhaltsstoffe{% endif %}</span>
        </div>
        <div class="inh-stat">
          <span class="inh-stat-number">100%</span>
          <span class="inh-stat-label">Vegan</span>
        </div>
        <div class="inh-stat">
          <span class="inh-stat-number">0</span>
          <span class="inh-stat-label">{% if request.locale.iso_code == 'en' %}Drug substances{% else %}Arzneistoffe{% endif %}</span>
        </div>
      </div>
    </div>

    <div class="inh-hero-ring-wrap">
      <div class="inh-hero-ring">
        <svg class="inh-hero-ring-svg" viewBox="0 0 260 260">
          <circle class="inh-hero-ring-circle" cx="130" cy="130" r="120"/>
          <defs>
            <path id="hero-arc-top" d="M 30,130 a 100,100 0 0,1 200,0"/>
            <path id="hero-arc-bottom" d="M 230,130 a 100,100 0 0,1 -200,0"/>
          </defs>
          <text class="inh-hero-ring-text">
            <textPath href="#hero-arc-top" startOffset="50%" text-anchor="middle">{% if request.locale.iso_code == 'en' %}Enhanced bioavailability{% else %}Verbesserte Bioverfügbarkeit{% endif %}</textPath>
          </text>
          <text class="inh-hero-ring-text">
            <textPath href="#hero-arc-bottom" startOffset="50%" text-anchor="middle">{% if request.locale.iso_code == 'en' %}Vegan &amp; natural{% else %}Vegan &amp; natürlich{% endif %}</textPath>
          </text>
        </svg>
        <img class="inh-hero-capsule" src="{{ 'capsule.svg' | asset_url }}" alt="" loading="lazy" decoding="async">
      </div>
    </div>
  </div>
</section>

<!-- Category Filters -->
<section class="inh-filters" aria-label="{% if request.locale.iso_code == 'en' %}Category filters{% else %}Kategoriefilter{% endif %}">
  <div class="inh-filters-inner">
    {% if request.locale.iso_code == 'en' %}
    <button class="inh-filter-btn active" type="button" data-filter="all">All</button>
    <button class="inh-filter-btn" type="button" data-filter="Naturstoffe">Botanicals</button>
    <button class="inh-filter-btn" type="button" data-filter="Vitamine">Vitamins</button>
    <button class="inh-filter-btn" type="button" data-filter="Mineralstoffe">Minerals</button>
    <button class="inh-filter-btn" type="button" data-filter="Aminosäuren">Amino acids</button>
    <button class="inh-filter-btn" type="button" data-filter="Sonstige Stoffe">Other substances</button>
    {% else %}
    <button class="inh-filter-btn active" type="button" data-filter="all">Alle</button>
    <button class="inh-filter-btn" type="button" data-filter="Naturstoffe">Naturstoffe</button>
    <button class="inh-filter-btn" type="button" data-filter="Vitamine">Vitamine</button>
    <button class="inh-filter-btn" type="button" data-filter="Mineralstoffe">Mineralstoffe</button>
    <button class="inh-filter-btn" type="button" data-filter="Aminosäuren">Aminosäuren</button>
    <button class="inh-filter-btn" type="button" data-filter="Sonstige Stoffe">Sonstige Stoffe</button>
    {% endif %}
  </div>
</section>

<!-- Ingredient Gallery -->
<section class="inh-gallery-section" aria-label="{% if request.locale.iso_code == 'en' %}Ingredient list{% else %}Inhaltsstoffliste{% endif %}">
  <div class="inh-gallery-inner">
    <div class="inh-gallery" id="inh-gallery"></div>
  </div>
</section>

<!-- Nutrition Facts -->
<section class="inh-nutrition" aria-label="{% if request.locale.iso_code == 'en' %}Nutrients and ingredients{% else %}Nährstoffe und Zutaten{% endif %}">
  <div class="nutrition-inner">
    <div class="nutrition-grid">
      <div class="nutrition-col">
        <h2 class="nutrition-heading">{% if request.locale.iso_code == 'en' %}Nutrients{% else %}Nährstoffe{% endif %}</h2>

        <div class="nutrition-table-collapsible" id="nutrition-collapsible">
          <div class="nutrition-table-wrap" id="nutrition-table" role="region" aria-label="{% if request.locale.iso_code == 'en' %}Nutrient table{% else %}Nährstofftabelle{% endif %}" tabindex="0">
          <table class="nutrition-table">
            <thead>
              <tr>
                <th scope="col">{% if request.locale.iso_code == 'en' %}Nutrients{% else %}Nährstoffe{% endif %}</th>
                <th scope="col">{% if request.locale.iso_code == 'en' %}per daily dose (2 capsules){% else %}pro Tagesdosierung (2 Kapseln){% endif %}</th>
                <th scope="col">NRV (%)</th>
              </tr>
            </thead>
            <tbody>
              <tr class="nutrition-group">
                <th colspan="3">{% if request.locale.iso_code == 'en' %}Vitamins{% else %}Vitamine{% endif %}</th>
              </tr>
              <tr>
                <th scope="row">Vitamin C</th>
                <td>40&nbsp;mg</td>
                <td>50&nbsp;%</td>
              </tr>
              <tr>
                <th scope="row">{% if request.locale.iso_code == 'en' %}Vitamin E (natural){% else %}Vitamin E (natürlich){% endif %}</th>
                <td>18&nbsp;mg</td>
                <td>150&nbsp;%</td>
              </tr>
              <tr>
                <th scope="row">Riboflavin</th>
                <td>1,4&nbsp;mg</td>
                <td>100&nbsp;%</td>
              </tr>
              <tr>
                <th scope="row">Niacin</th>
                <td>20&nbsp;mg</td>
                <td>125&nbsp;%</td>
              </tr>
              <tr>
                <th scope="row">{% if request.locale.iso_code == 'en' %}Pantothenic acid{% else %}Pantothensäure{% endif %}</th>
                <td>18&nbsp;mg</td>
                <td>300&nbsp;%</td>
              </tr>
              <tr>
                <th scope="row">Vitamin B6</th>
                <td>7&nbsp;mg</td>
                <td>500&nbsp;%</td>
              </tr>
              <tr>
                <th scope="row">Biotin</th>
                <td>150&nbsp;µg</td>
                <td>300&nbsp;%</td>
              </tr>
              <tr>
                <th scope="row">{% if request.locale.iso_code == 'en' %}Folic acid{% else %}Folsäure{% endif %}</th>
                <td>200&nbsp;µg</td>
                <td>100&nbsp;%</td>
              </tr>
              <tr>
                <th scope="row">Vitamin A</th>
                <td>800&nbsp;µg</td>
                <td>100&nbsp;%</td>
              </tr>
              <tr>
                <th scope="row">Beta Carotin</th>
                <td>0,8&nbsp;mg</td>
                <td>–</td>
              </tr>
              <tr>
                <th scope="row">Vitamin D</th>
                <td>10&nbsp;µg</td>
                <td>200&nbsp;%</td>
              </tr>

              <tr class="nutrition-group">
                <th colspan="3">{% if request.locale.iso_code == 'en' %}Minerals{% else %}Mineralstoffe{% endif %}</th>
              </tr>
              <tr>
                <th scope="row">{% if request.locale.iso_code == 'en' %}Zinc{% else %}Zink{% endif %}</th>
                <td>10&nbsp;mg</td>
                <td>100&nbsp;%</td>
              </tr>
              <tr>
                <th scope="row">{% if request.locale.iso_code == 'en' %}Boron{% else %}Bor{% endif %}</th>
                <td>1&nbsp;mg</td>
                <td>–</td>
              </tr>
              <tr>
                <th scope="row">{% if request.locale.iso_code == 'en' %}Manganese{% else %}Mangan{% endif %}</th>
                <td>1&nbsp;mg</td>
                <td>50&nbsp;%</td>
              </tr>
              <tr>
                <th scope="row">{% if request.locale.iso_code == 'en' %}Copper{% else %}Kupfer{% endif %}</th>
                <td>1&nbsp;mg</td>
                <td>100&nbsp;%</td>
              </tr>
              <tr>
                <th scope="row">{% if request.locale.iso_code == 'en' %}Iodine{% else %}Jod{% endif %}</th>
                <td>225&nbsp;µg</td>
                <td>150&nbsp;%</td>
              </tr>
              <tr>
                <th scope="row">{% if request.locale.iso_code == 'en' %}Selenium{% else %}Selen{% endif %}</th>
                <td>44&nbsp;µg</td>
                <td>80&nbsp;%</td>
              </tr>

              <tr class="nutrition-group">
                <th colspan="3">{% if request.locale.iso_code == 'en' %}Other substances{% else %}Sonstige Stoffe{% endif %}</th>
              </tr>
              <tr>
                <th scope="row">{% if request.locale.iso_code == 'en' %}Ashwagandha extract{% else %}Ashwagandhaextrakt{% endif %}</th>
                <td>300&nbsp;mg</td>
                <td>–</td>
              </tr>
              <tr class="nutrition-sub">
                <th scope="row">– Withanolide</th>
                <td>15&nbsp;mg</td>
                <td>–</td>
              </tr>
              <tr>
                <th scope="row">{% if request.locale.iso_code == 'en' %}Sprouted pea seed extract powder{% else %}gekeimtes Erbsensamenextrakt Pulver{% endif %}</th>
                <td>100&nbsp;mg</td>
                <td>–</td>
              </tr>
              <tr>
                <th scope="row">{% if request.locale.iso_code == 'en' %}Saw palmetto extract{% else %}Sägepalmenextrakt{% endif %}</th>
                <td>50&nbsp;mg</td>
                <td>–</td>
              </tr>
              <tr class="nutrition-sub">
                <th scope="row">– {% if request.locale.iso_code == 'en' %}Fatty acids{% else %}Fettsäuren{% endif %}</th>
                <td>12,5&nbsp;mg</td>
                <td>–</td>
              </tr>
              <tr>
                <th scope="row">{% if request.locale.iso_code == 'en' %}Pomegranate extract{% else %}Granatapfelextrakt{% endif %}</th>
                <td>10&nbsp;mg</td>
                <td>–</td>
              </tr>
              <tr class="nutrition-sub">
                <th scope="row">– {% if request.locale.iso_code == 'en' %}Ellagic acid{% else %}Ellagsäure{% endif %}</th>
                <td>4&nbsp;mg</td>
                <td>–</td>
              </tr>
              <tr>
                <th scope="row">L‑Lysin HCL</th>
                <td>100&nbsp;mg</td>
                <td>–</td>
              </tr>
              <tr class="nutrition-sub">
                <th scope="row">– L Lysin</th>
                <td>79&nbsp;mg</td>
                <td>–</td>
              </tr>
              <tr>
                <th scope="row">L‑Cysteine</th>
                <td>50&nbsp;mg</td>
                <td>–</td>
              </tr>
            </tbody>
          </table>
        </div>
          <button class="nutrition-toggle" type="button" aria-expanded="false" aria-controls="nutrition-table">
            {% if request.locale.iso_code == 'en' %}Show more{% else %}Mehr anzeigen{% endif %} <span aria-hidden="true">▾</span>
          </button>
        </div>

        <p class="nutrition-note">
          {% if request.locale.iso_code == 'en' %}* Nutrient Reference Values (EU Regulation No. 1169/2011){% else %}* Nährstoffbezugswerte (nach VO (EU) Nr. 1169 / 2011){% endif %}
        </p>
      </div>

      <div class="nutrition-col">
        <h2 class="nutrition-heading">{% if request.locale.iso_code == 'en' %}Ingredients{% else %}Zutaten{% endif %}</h2>
        {% if request.locale.iso_code == 'en' %}
        <p class="nutrition-ingredients">
          Ingredients: 27.27&nbsp;% Ashwagandha root dry extract (KSM‑66®), coating agent (hydroxypropyl methylcellulose), 9.09&nbsp;% sprouted pea seed extract powder (AnaGain™ Nu), L‑Lysine HCL, bulking agent (dicalcium phosphate), 4.54&nbsp;% saw palmetto fruit dry extract, 4.54&nbsp;% L‑Cysteine base, D‑alpha‑tocopheryl acetate, L‑ascorbic acid, zinc bisglycinate, nicotinamide, calcium D‑pantothenate, 0.91&nbsp;% pomegranate fruit dry extract, anti-caking agents (magnesium salts of fatty acids and silicon dioxide), sodium borate, manganese gluconate, pyridoxine hydrochloride, beta‑carotene, retinyl acetate, cholecalciferol, copper sulfate, riboflavin, potassium iodide, pteroylmonoglutamic acid, D‑biotin, sodium selenite.
        </p>
        {% else %}
        <p class="nutrition-ingredients">
          Zutaten: 27,27&nbsp;% Ashwagandha‑Wurzel‑Trockenextrakt (KSM‑66®), Überzugsmittel (Hydroxypropylmethylcellulose), 9,09&nbsp;% gekeimtes Erbsensamenextrakt Pulver (AnaGain™ Nu), L Lysin HCL, Füllstoff (Dicalciumphosphat), 4,54&nbsp;% Sägepalmenfrucht‑Trockenextrakt, 4,54&nbsp;% L‑Cysteine Base, D‑Alpha‑Tocopherylacetat, L‑Ascorbinsäure, Zinkbisglycinat, Nicotinamid, Calcium‑D‑Pantothenat, 0,91&nbsp;% Granatapfelfrucht‑Trockenextrakt, Trennmittel (Magnesiumsalze der Speisefettsäuren und Siliciumdioxid), Natriumborat, Mangangluconat, Pyridoxinhydrochlorid, Beta‑Carotin, Retinylacetat, Cholecalciferol, Kupfersulfat, Riboflavin, Kaliumiodid, Pteroylmonoglutaminsäure, D‑Biotin, Natriumselenit.
        </p>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<!-- Drawer -->
<div class="ingredient-backdrop" id="ingredient-backdrop" hidden></div>
<aside class="ingredient-drawer" id="ingredient-drawer" aria-hidden="true" aria-label="{% if request.locale.iso_code == 'en' %}Ingredient detail view{% else %}Inhaltsstoff-Detailansicht{% endif %}">
  <div class="ingredient-drawer-header">
    <div class="ingredient-drawer-kicker" id="ingredient-drawer-kicker">{% if request.locale.iso_code == 'en' %}BOTANICALS{% else %}NATURSTOFFE{% endif %}</div>
    <button class="ingredient-drawer-close" type="button" id="ingredient-drawer-close" aria-label="{{ 'general.accessibility.close' | t }}">×</button>
  </div>

  <div class="ingredient-drawer-media" aria-hidden="true">
    <img class="ingredient-drawer-media-icon" id="ingredient-drawer-image" src="{{ 'capsule.svg' | asset_url }}" alt="" loading="lazy" decoding="async">
  </div>

  <div class="ingredient-drawer-body">
    <h2 class="ingredient-drawer-title" id="ingredient-drawer-title">{% if request.locale.iso_code == 'en' %}Ingredient{% else %}Inhaltsstoff{% endif %}</h2>
    <div class="ingredient-drawer-subtitle" id="ingredient-drawer-subtitle"></div>
    <div class="ingredient-drawer-facts" id="ingredient-drawer-facts" hidden></div>
    <p class="ingredient-drawer-description" id="ingredient-drawer-description"></p>
    <ul class="ingredient-drawer-contains" id="ingredient-drawer-contains" hidden></ul>
  </div>
</aside>

<script>
  window.__LOCALE__ = "{{ request.locale.iso_code }}";
  window.__INGREDIENT_IMAGES__ = {
    anagain: "{{ 'Anagain.png' | asset_url }}",
    sawpalmetto: "{{ 'Saegepalmenextrakt.png' | asset_url }}",
    pomegranate: "{{ 'Granatapfel.png' | asset_url }}",
    ashwagandha_extract: "{{ 'Ashwaganda.png' | asset_url }}",
    lcysteine: "{{ 'L-cysteine.png' | asset_url }}",
    llysine_hcl: "{{ 'L-lysine.png' | asset_url }}",
    biotin: "{{ 'biotin.png' | asset_url }}"
  };
</script>
<script src="{{ 'inhaltsstoffe.js' | asset_url }}" defer></script>
